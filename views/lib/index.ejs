<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu', { user: user }) %>


<h1><%= title %></h1>
<a class="btn btn-sm btn-primary" href="/api/book/create">Добавить запись</a>

<% if (!user) { %>
    <p>Пожалуйста, <a href="/api/user/login"> авторизуйтесь </a></p>
<% } else { %>
    <p>Привет, <%= user.username %>. </p>
    <p>Перейти в <a href="/api/user/profile">профиль</a>.</p>
<% } %>

<% if(todos.length) { %>
    <table class="table table-striped table-sm  mt-3">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Заголовок</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        <% todos?.map((el, idx) => {  %>
            <tr>
                <th scope="row"><%= idx +1 %></th>
                <td><%= el.title %></td>
                <td class="text-right">
                    <a class="btn btn-sm btn-success" href="/api/books/<%= el._id %>">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= el._id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= el._id %>" method="POST" class="d-inline">
                        <a href=""></a>
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>

        </tbody>
    </table>
<% } else { %>
    <h3 class="mt-5">Записей пока нет</h3>
<% } %>





<%- include('../port/layout-end') %>