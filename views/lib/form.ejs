<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= todo.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <input type="text"
               value="<%= todo.description %>"
               name="desc"
               class="form-control"
               id="inputDesc">
    </div>
    <div class="form-group">
        <label for="inputFavorite">Любимые</label>
        <input type="text"
               value="<%= todo.favorite %>"
               name="Favorite"
               class="form-control"
               id="inputFavorite">
    </div>

    <div class="form-group">
        <label for="inputAuth">Авторы</label>
        <input type="text"
               value="<%= todo.authors %>"
               name="authors"
               class="form-control"
               id="inputAuth">
    </div>


    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>